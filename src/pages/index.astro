---
// Component Imports
import MainHead from "../components/MainHead.astro";
import SEOHead from "../components/SEOHead.astro";
import Body from "../components/Body/index.jsx";
import Nav from "../components/Nav/index.jsx";
import SparklingSphere from "../components/Particles/sparklingSphere";
import Footer from "../components/Footer";
import { isMobile } from "react-device-detect";

const totalParticles = isMobile ? 1000 : 2000;

enum COLORS {
  blue="blue",
  orange="orange",
  green="green",
  yellow="yellow"
}

const particleColors = {
  [COLORS.blue]: [0x88ccff, 0x7dabf1, 0x6a8dff],
  [COLORS.orange]: [0xfda252, 0xfda252, 0xf99352],
  [COLORS.green]: [0x33cc33, 0x4db34d, 0x00cc00],
  [COLORS.yellow]: [0xcccc33, 0xb3b34d, 0xffff00]
}

const backgroundColors = {
  [COLORS.blue]: "#021027",
  [COLORS.orange]: "#2c1400",
  [COLORS.green]: "#001605",
  [COLORS.yellow]: "#191800",
}

const colorsArray = Object.values(COLORS)
const randomColor = colorsArray[Math.floor(Math.random() * Object.values(COLORS).length)];

// 2025 next logic xD
const colorSelected = randomColor;

// SEO Data for homepage
const seoTitle = "Edsel Serrano | Full Stack Developer & Technology Enthusiast";
const seoDescription = "Software Engineer specialized in Full Stack Development with expertise in JavaScript, React, Next.js, and modern web technologies. Passionate about machine learning and entrepreneurship.";
const keywords = [
  'Edsel Serrano', 
  'Full Stack Developer', 
  'Software Engineer', 
  'JavaScript Developer', 
  'React Developer', 
  'Next.js Developer', 
  'Web Development', 
  'Machine Learning', 
  'Technology Entrepreneur',
  'Frontend Developer',
  'Backend Developer'
];

const alternateLanguages = [
  { lang: 'es' as const, url: '/' },
  { lang: 'en' as const, url: '/en/' }
];
---

<html lang="en">
  <head>
    <SEOHead 
      title={seoTitle}
      description={seoDescription}
      canonical="/"
      language="es"
      alternateLanguages={alternateLanguages}
      keywords={keywords}
      type="website"
    />
    <MainHead
      title="Edsel Serrano"
      description="Edsel Serrano: Software Engineer, Machine learning lover, and Entrepreneur of Technology..."
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>

  <body>
    <Nav />

    <SparklingSphere totalParticles={totalParticles} backgroundColor={backgroundColors[colorSelected]} particleColors={particleColors[colorSelected]} client:only="react" />
    <Body /> 
    <Footer />

  
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=G-76748FJ47B"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
  </body>
</html>
