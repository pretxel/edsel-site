---
import Layout from "../../../layouts/BlogLayout.astro";
import { getLocalizedPosts } from "../../../lib/data";
import { t } from "../../../lib/i18n";
import PostCard from "../../../components/PostCard.astro";
import LanguageSwitcher from "../../../components/LanguageSwitcher.astro";

const currentLanguage = 'en';
const posts = getLocalizedPosts(currentLanguage);
---

<Layout title={t('blog.title', {}, currentLanguage)} image="path/to/image.jpg">
  <div class="min-h-screen">
    <!-- Language Switcher -->
    <div class="absolute top-4 right-4 z-50">
      <LanguageSwitcher currentLanguage={currentLanguage} currentPath={Astro.url.pathname} />
    </div>

    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900">
      <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      <div class="relative z-10 px-6 py-16 sm:py-24">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            {t('blog.welcome_title', {}, currentLanguage)}
            <span class="bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
              {t('blog.welcome_subtitle', {}, currentLanguage)}
            </span>
          </h1>
          <p class="text-xl text-zinc-300 mb-8 max-w-2xl mx-auto leading-relaxed">
            {t('blog.welcome_description', {}, currentLanguage)}
          </p>
          <div class="flex justify-center items-center space-x-4 text-sm text-zinc-400">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              {posts.length} {t('blog.articles_count', {}, currentLanguage)}
            </span>
            <span class="w-1 h-1 bg-zinc-400 rounded-full"></span>
            <span>{t('blog.regular_updates', {}, currentLanguage)}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Posts Section -->
    <div class="relative px-6 py-12">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12">
          <h2 class="text-3xl font-bold text-white mb-4">{t('blog.latest_articles', {}, currentLanguage)}</h2>
          <div class="w-20 h-1 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full"></div>
        </div>
        
        <div class="grid gap-6 sm:gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
          {posts.map((post) => <PostCard post={post} currentLanguage={currentLanguage} />)}
        </div>

        {posts.length === 0 && (
          <div class="text-center py-16">
            <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-zinc-800 flex items-center justify-center">
              <svg class="w-12 h-12 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-zinc-300 mb-2">{t('blog.no_articles_title', {}, currentLanguage)}</h3>
            <p class="text-zinc-500">{t('blog.no_articles_description', {}, currentLanguage)}</p>
          </div>
        )}
      </div>
    </div>

    <!-- Newsletter/CTA Section -->
    <div class="relative px-6 py-16 bg-gradient-to-r from-zinc-900/50 to-zinc-800/50">
      <div class="max-w-4xl mx-auto text-center">
        <h3 class="text-2xl sm:text-3xl font-bold text-white mb-4">
          {t('blog.stay_updated', {}, currentLanguage)}
        </h3>
        <p class="text-zinc-300 mb-8 max-w-2xl mx-auto">
          {t('blog.stay_updated_description', {}, currentLanguage)}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center w-full max-w-md mx-auto sm:max-w-none">
          <a 
            href="https://github.com/edselserrano" 
            target="_blank"
            class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-white text-black font-semibold rounded-lg hover:bg-gray-100 transition-colors duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
            </svg>
            {t('blog.follow_github', {}, currentLanguage)}
          </a>
          <a 
            href="mailto:pretxel100@gmail.com"
            class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-black transition-colors duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {t('blog.get_in_touch', {}, currentLanguage)}
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>
